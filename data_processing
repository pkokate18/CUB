  annotate("rect",xmin = 20.5, xmax = 21.5, ymin = -Inf, ymax = +Inf, fill = "darkgrey", alpha = 0.2) +
  annotate("rect",xmin = 21.5, xmax = 26.5, ymin = -Inf, ymax = +Inf, fill = "darkkhaki", alpha = 0.2) +
  annotate("rect",xmin = 27.5, xmax = 29.5, ymin = -Inf, ymax = +Inf, fill = "yellow", alpha = 0.2) +
  theme(legend.text = element_text(colour="black", size = 15, face = "bold"))+
  theme(legend.title = element_text(colour="black", size=16, face="bold"))+
  theme(axis.text.y   = element_text(size=10,face="bold",color="black"),
        axis.text.x   = element_text(size=9,face="bold",color="black", angle=45, hjust=0, vjust=0),
        axis.title.y  = element_text(size=14),
        axis.title.x  = element_text(size=14),
        axis.line = element_line(colour = "black"),
        panel.border = element_rect(colour = "black", fill=NA, size=1))+guides(size=FALSE)

Ser_RSCU<-subset(RSCU_startworking, Amino_acid=='Ser')# tSer is interesting...the old RSCU plotting worked with RSCU_startworking$AMino_acid, now it needs the dataframe and the column name separated by a comma...who would have thought.
Ser_RSCU$Species<-as.character(Ser_RSCU$Species)
Ser_RSCU$Species<-factor(Ser_RSCU$Species, levels=unique(Ser_RSCU$Species))
ggplot(Ser_RSCU,aes(x=Species, y= value, color = codon)) +geom_point(shape=20, size=10) +  
  ggtitle("Serine") + 
  geom_errorbar((aes(ymin=value-stdev, ymax=value+stdev, group = codon, width=0.2)))+xlab("Species") + ylab("mean RSCU")+
  annotate("rect",xmin = 0.5, xmax = 1.5, ymin = -Inf, ymax = +Inf, fill = "darkviolet", alpha = 0.2) +
