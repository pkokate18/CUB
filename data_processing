#a well indented phylo tree
plot(chronoMPL(CUB_phylo_tree))
branched_lengths_phylotree<-compute.brlen(CUB_phylo_tree, method = "Grafen", power = 1)

#Hierarchical clustering ..species and codons (FIgure 4)
library(heatmaply)
library(stats)
library(phyloseq)

phylo_corrected_ortho_meanRSCU<-read_csv("reviewerimprovedphylogenyRSCUmeansconduciveforlambda.csv")
phylo_corrected_ortho_meanRSCU<-as.data.frame(phylo_corrected_ortho_meanRSCU)
rownames(phylo_corrected_ortho_meanRSCU)<-phylo_corrected_ortho_meanRSCU$X1#convert first column (X1) intorownames
phylo_corrected_ortho_meanRSCU<-phylo_corrected_ortho_meanRSCU %>% select (-X1) # now deleted the t
heatmaply(phylo_corrected_ortho_meanRSCU, 
          dendrogram = "both",
          xlab = "Codon", ylab = "Species", 
          main = "Relative synonymous codon usage (RSCU) analysis",
          scale = "column",
          margins = c(60,100,40,20),
          grid_color = "white",
          grid_width = 0.00001,
          titleX = FALSE,
          hide_colorbar = FALSE,
          branches_lwd = 0.1,
          label_names = c("Species", "Codon", "Value"),
          fontsize_row = 8, fontsize_col = 8,  font='bold',labCol = colnames(phylo_corrected_ortho_meanRSCU),
          labRow = rownames(phylo_corrected_ortho_meanRSCU),
          heatmap_layers = theme(axis.line=element_blank())

#PGLS
ENC_GC<-read.csv("ENC_GC_PGLSCSV.csv", header=TRUE, row.names=1)
ENC_GC$Species<-ENC_GC$Species[branched_lengths_phylotree$tip.label,] # sort data according to tree
obj<-name.check(branched_lengths_phylotree,ENC_GC)#so this has not come form the nex file generation for the tree..but it worked :)
bm<-corBrownian(1,branched_lengths_phylotree)
#No loop
A<-ENC_GC[,1]#gc CDS
B<-ENC_GC[,2]# ENC CDS
P<-ENC_GC[,3]# GC SCO
Q<-ENC_GC[,4]# ENC SCO
glsquares<-gls(B~A,correlation = bm);# FOR cds
glsquares_pq<-gls(Q~P,correlation = bm);#for sco
PGLSGCvsENC[1,2]<-summary(glsquares)$sigma;
PGLSGCvsENC[1,3]<-summary(glsquares)$AIC;
PGLSGCvsENC[1,4]<-summary(glsquares)$BIC;
PGLSGCvsENC[1,5]<-summary(glsquares)$logLik;
PGLSGCvsENC[1,c(6:9)]<-summary(glsquares)$corBeta;
PGLSGCvsENC[1,c(10:17)]<-summary(glsquares)$tTable;
PGLSGCvsENC[1,c(18:21)]<-summary(glsquares)$varBeta;
PGLSGCvsENC[3,2]<-summary(glsquares_pq)$sigma;
PGLSGCvsENC[3,3]<-summary(glsquares_pq)$AIC;
PGLSGCvsENC[3,4]<-summary(glsquares_pq)$BIC;
PGLSGCvsENC[3,5]<-summary(glsquares_pq)$logLik;
PGLSGCvsENC[3,c(6:9)]<-summary(glsquares_pq)$corBeta;
PGLSGCvsENC[3,c(10:17)]<-summary(glsquares_pq)$tTable;
PGLSGCvsENC[3,c(18:21)]<-summary(glsquares_pq)$varBeta;


write.csv(PGLSGCvsENC, "glsGccontentversusENC.csv") # THIS TABLE IS TRIMMED TO CREATE TABLE 2.
summary(glsquares)
summary(glsquares_pq)
###further statistics and alternative to bm # replace P and Q with A and B to get the CDS regression
mat<-vcv(branched_lengths_phylotree,corr=TRUE)
fit<-gls(Q~P, correlation=corSymm(mat[lower.tri(mat)],fixed=TRUE))

summary(fit)
fit2<-gls(Q~P, correlation=bm)# this doesnt take the fixed argument 
anova(fit,fit2)
plot(fit2, resid(., type="n")~fitted(.), main="Normalized Residuals v Fitted Values",
     abline=c(0,0))
res <- resid(fit2, type="n")
qqnorm(res)
qqline(res)

summary(fit2)

#CALCULATE STANDARD ERROR REQUIRED FOR PAGEL'S LAMBDA CODE
###########################################################################


#calculating standard error for RSCU
RSCU_ortho_stdev<-read.csv("reviewersimprovedphylogenyRSCUstdevconduciveforlambda.csv", row.names=1, header=TRUE)
standarderrortable<-array(0:0,dim=c(30,60))
standarderrortable<-as.data.frame(standarderrortable)
standarderrortable[c(2:30),1]<-rownames(RSCU_ortho_stdev)
standarderrortable[1,c(2:60)]<-colnames(RSCU_ortho_stdev)
m<-sqrt(668)
n<-60
q<-30
for (i in 2:q) {
  for (j in 2:n) {
    standarderrortable[i,j]<-RSCU_ortho_stdev[i-1,j-1]/m
    j+1 }
  i+1}


write.csv(standarderrortable, "RSCUstderror.csv")

#############################################
#CALCULATING STD ERROR FOR SDU VALUES
SDU_ortho_stdev<-read.csv("reviewerimprovedphylogeny_SDU_stdevconduciveforlambda.csv", row.names=1, header=TRUE)
standarderrortable_1<-array(0:0,dim=c(30,17))
standarderrortable_1<-as.data.frame(standarderrortable)
standarderrortable_1[c(2:30),1]<-rownames(SDU_ortho_stdev)
standarderrortable_1[1,c(2:17)]<-colnames(SDU_ortho_stdev)
m<-sqrt(668)
n<-17
q<-30
for (i in 2:q) {
  for (j in 2:n) {
    standarderrortable_1[i,j]<-SDU_ortho_stdev[i-1,j-1]/m
    j+1 }
  i+1}


write.csv(standarderrortable_1, "SDUstderror.csv")

##################################################################################
pAGELS LAMBDA FOR MEAN RSCU
#Pagels lambda for RSCU with standard error
phylo_corrected_ortho_RSCU<-read.csv("reviewerimprovedphylogenyRSCUmeansconduciveforlambda.csv", row.names=1)
RSCU_stderror<-read.csv("RSCUstderror.csv",row.names=1)
final_tableRSCU_lambda<-array(0:0,dim=c(59,8))
final_tableRSCU_lambda<-as.data.frame(final_tableRSCU_lambda)
rownames<-t(colnames(phylo_corrected_ortho_RSCU))
rownames<-as.character(rownames)
rownames<-as.data.frame(rownames)
conduciverownames<-t(rownames)
conduciverownames<-as.data.frame(conduciverownames)
final_tableRSCU_lambda[c(1:59),1]<-t(conduciverownames)
n<-59

for (i in 1:n) {
  stderror<-RSCU_stderror[,i]
  names(stderror)<-rownames(RSCU_stderror)
  final_tableRSCU_lambda[i,c(2:8)]<-phylosig(branched_lengths_phylotree, setNames(phylo_corrected_ortho_RSCU[,i],rownames(phylo_corrected_ortho_RSCU)), method="lambda", se= stderror, test=TRUE)
  i=i+1}



write.csv(final_tableRSCU_lambda, "Pagel_lambda_forRSCUwithstandarderror.csv")# PRUNED TO GET TABLE 4
###########
#FOR SENCX

phylo_corrected_ortho_sENCX<-read.csv("reviewer_phylogenyimproved_sENCXascsv.csv", row.names=1)
final_tablesENCX_lambda<-array(0:0,dim=c(18,5))
final_tablesENCX_lambda<-as.data.frame(final_tablesENCX_lambda)
rownames<-t(colnames(phylo_corrected_ortho_sENCX))
rownames<-as.character(rownames)
rownames<-as.data.frame(rownames)
conduciverownames<-t(rownames)
conduciverownames<-as.data.frame(conduciverownames)
final_tablesENCX_lambda[c(1:18),1]<-t(conduciverownames)
n<-18

for (i in 1:n) {
  final_tablesENCX_lambda[i,c(2:5)]<-phylosig(branched_lengths_phylotree, setNames(phylo_corrected_ortho_sENCX[,i],rownames(phylo_corrected_ortho_sENCX)), method="lambda", test=TRUE)
  i=i+1}

write.csv(final_tablesENCX_lambda, "Pagel_lambda_forsENCX.csv")# PRUNED TO MAKE TABLE 5
