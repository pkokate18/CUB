#each rscu file was cleaned to remove unwanted columns. The table was transformed to get genes as row names and amino acids as columns
#The average RSCU for each codon for each amino acid was calculated. THis is a mathematical way of doing what Lamolle et al 2018, have done by making a long concatenated superpeptide.
#The minimum, maximum and average RSCU values for each codon for each amino acid per species are tabulated in Supplementary Table 2.
#The RSCU values are arranged with the species in the correct phylogenetic order.  


# go to ortho_sequences for these ones...u can copy the code above to get a heatmap...but no fun in that
RSCU_mean<-read_csv("reviewers_phylogenyimproved_RSCUmeans_shortspeciesnames.csv")
RSCU_stdev<-read_excel("reviewers_phylogenyimproved_RSCUstdev_shortspeciesnames.xlsx")
RSCU_mean_melt<-melt(RSCU_mean)
RSCU_mean_melt<-as.data.frame(RSCU_mean_melt)
RSCU_mean_melt<-RSCU_mean_melt %>% rename(Species=variable)

RSCU_stdev_melt<-melt(RSCU_stdev)
RSCU_stdev_melt<-as.data.frame(RSCU_stdev_melt)
RSCU_stdev_melt<-RSCU_stdev_melt %>% rename(stdev=value)
RSCU_stdev_melt<-RSCU_stdev_melt %>% rename(not_needed1=variable)
RSCU_stdev_melt<-RSCU_stdev_melt %>% rename(not_needed2=codon)
#RSCU_stdev_melt<-RSCU_stdev_melt %>% rename(not_needed3=amino acid)#never leave a space in any name...thankfully the aminoacid column names are different
RSCU_startworking<-cbind(RSCU_mean_melt,RSCU_stdev_melt)
RSCU_startworking<-as.data.frame(RSCU_startworking)





##########PROBABLY THE SHADING TO ENHANCE THE IMAGE...but otherwise set
Ala_RSCU<-subset(RSCU_startworking, Amino_acid=='Ala')# this is interesting...the old RSCU plotting worked with RSCU_startworking$AMino_acid, now it needs the dataframe and the column name separated by a comma...who would have thought.
Ala_RSCU$Species<-as.character(Ala_RSCU$Species)
Ala_RSCU$Species<-factor(Ala_RSCU$Species, levels=unique(Ala_RSCU$Species))
ggplot(Ala_RSCU,aes(x=Species, y= value, color = codon)) +geom_point(shape=20, size=10) +  
  ggtitle("Alanine") + 
  geom_errorbar((aes(ymin=value-stdev, ymax=value+stdev, group = codon, width=0.2)))+xlab("Species") + ylab("mean RSCU")+
  annotate("rect",xmin = 0.5, xmax = 1.5, ymin = -Inf, ymax = +Inf, fill = "darkviolet", alpha = 0.2) +
  annotate("rect",xmin = 1.5, xmax = 2.5, ymin = -Inf, ymax = +Inf, fill = "darkmagenta", alpha = 0.2) +
  annotate("rect",xmin = 2.5, xmax = 4.5, ymin = -Inf, ymax = +Inf, fill = "blueviolet", alpha = 0.2) +
  annotate("rect",xmin = 4.5, xmax = 5.5, ymin = -Inf, ymax = +Inf, fill = "blue", alpha = 0.2) +
  annotate("rect",xmin = 5.5, xmax = 8.5, ymin = -Inf, ymax = +Inf, fill = "cornflowerblue", alpha = 0.2) +
  annotate("rect",xmin = 8.5, xmax = 9.5, ymin = -Inf, ymax = +Inf, fill = "lightpink", alpha = 0.2) +
  annotate("rect",xmin = 9.5, xmax = 13.5, ymin = -Inf, ymax = +Inf, fill = "palegreen", alpha = 0.2) +
  annotate("rect",xmin = 13.5, xmax = 15.5, ymin = -Inf, ymax = +Inf, fill = "darkgoldenrod1", alpha = 0.2) +
  annotate("rect",xmin = 15.5, xmax = 17.5, ymin = -Inf, ymax = +Inf, fill = "chartreuse", alpha = 0.2) +
  annotate("rect",xmin = 17.5, xmax = 18.5, ymin = -Inf, ymax = +Inf, fill = "darkolivegreen1", alpha = 0.2) +
  annotate("rect",xmin = 18.5, xmax = 19.5, ymin = -Inf, ymax = +Inf, fill = "darkseagreen", alpha = 0.2) +
  annotate("rect",xmin = 19.5, xmax = 20.5, ymin = -Inf, ymax = +Inf, fill = "darkgreen", alpha = 0.2) +
  annotate("rect",xmin = 20.5, xmax = 21.5, ymin = -Inf, ymax = +Inf, fill = "darkgrey", alpha = 0.2) +
  annotate("rect",xmin = 21.5, xmax = 26.5, ymin = -Inf, ymax = +Inf, fill = "darkkhaki", alpha = 0.2) +
  annotate("rect",xmin = 27.5, xmax = 29.5, ymin = -Inf, ymax = +Inf, fill = "yellow", alpha = 0.2) +
  theme(legend.text = element_text(colour="black", size = 15, face = "bold"))+
  theme(legend.title = element_text(colour="black", size=16, face="bold"))+
  theme(axis.text.y   = element_text(size=10,face="bold",color="black"),
        axis.text.x   = element_text(size=9,face="bold",color="black", angle=45, hjust=0, vjust=0),
        axis.title.y  = element_text(size=14),
        axis.title.x  = element_text(size=14),
        axis.line = element_line(colour = "black"),
        panel.border = element_rect(colour = "black", fill=NA, size=1))+guides(size=FALSE)


